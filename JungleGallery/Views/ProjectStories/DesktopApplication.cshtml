@model IEnumerable<JungleGallery.Models.ProjectStory>


@{
    ViewBag.Title = "Desktop Applications";
}

<h2>Desktop Applications</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Platform)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.Raw(item.Details)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProjectStoryID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProjectStoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProjectStoryID })
            </td>
        </tr>
    }

</table>
